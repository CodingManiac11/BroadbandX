# FlexiSub Environment Configuration
# Copy this file to .env and update with your actual values

# =================================
# üöÄ APPLICATION SETTINGS
# =================================
NODE_ENV=development
PORT=5000
APP_NAME=FlexiSub
APP_VERSION=2.0.0

# =================================
# üóÑÔ∏è DATABASE CONFIGURATION
# =================================
# MongoDB Atlas Connection (Recommended for production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/flexisub?retryWrites=true&w=majority

# =================================
# üîê SECURITY & AUTHENTICATION
# =================================
JWT_SECRET=your-super-secure-jwt-secret-key-here-change-this-in-production
JWT_EXPIRE=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRE=7d

# =================================
# üì® EMAIL CONFIGURATION
# =================================
# Using Gmail SMTP as example - replace with your email service
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM="BroadbandX" <noreply@broadbandx.com>

# Client URL (for email links)
CLIENT_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Settings
BCRYPT_SALT_ROUNDS=12
ACCOUNT_LOCKOUT_TIME=1800000
MAX_LOGIN_ATTEMPTS=5

# File Upload Settings
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Payment Gateway (Stripe example)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Analytics and Monitoring
ENABLE_ANALYTICS=true
LOG_LEVEL=info

# Redis Configuration (for session management and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Admin Settings
ADMIN_EMAIL=admin@broadbandx.com
ADMIN_PASSWORD=admin123

# Database Seeding
SEED_ON_START=false

# API Versioning
API_VERSION=v1

# CORS Settings
CORS_ORIGIN=http://localhost:3000

# Session Configuration
SESSION_SECRET=your-session-secret-key-change-this-in-production
SESSION_EXPIRE=86400000

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false

# Twilio Configuration (for SMS notifications)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Google Analytics (Optional)
GA_TRACKING_ID=UA-XXXXXXXXX-X

# Error Reporting (Sentry example)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Feature Flags
ENABLE_RECOMMENDATIONS=true
ENABLE_USAGE_ANALYTICS=true
ENABLE_SPEED_TESTS=true

# Cache Settings
CACHE_TTL=3600
ENABLE_CACHE=true

# Backup Settings
ENABLE_AUTO_BACKUP=false
BACKUP_SCHEDULE="0 2 * * *"