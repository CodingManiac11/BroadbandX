{
  "name": "flexisub-server",
  "version": "2.0.0",
  "description": "Backend API for FlexiSub - AI-Powered Subscription Management System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testMatch='**/tests/integration/**/*.test.js'",
    "test:all": "npm run test && npm run test:integration",
    "seed": "node scripts/seedData.js",
    "seed:flexisub": "node scripts/seedFlexiSub.js",
    "seed:clear": "node scripts/clearData.js",
    "setup": "node scripts/setupEnv.js",
    "setup-dev": "npm run setup && npm run seed:flexisub",
    "setup-production": "npm run setup && npm run seed:flexisub",
    "docker:build": "docker build -t flexisub-server .",
    "docker:run": "docker run -p 5000:5000 flexisub-server"
  },
  "keywords": [
    "flexisub",
    "ai-powered",
    "dynamic-pricing",
    "subscription",
    "management",
    "MERN",
    "express",
    "mongodb",
    "machine-learning",
    "churn-prediction"
  ],
  "author": "CodingManiac11",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "recharts": "^3.2.0",
    "socket.io": "^4.8.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
